/**
 * PA CALL: ByPostcode
 *
 * Get the descriptions of all addresses for a given postcode
 *
 * @param $pc tidy postcode
 * @return structured data from postcodeanywhere_parse_csv()
 */
function postcodeanywhere_pa_get_bypostcode($pc) {
  // Get a PA URL
  $url = postcodeanywhere_pa_url("lookup", array("type" => "by_postcode", "postcode" => $pc) );
  
  // Make HTTP request; capture structured response
  $r = drupal_http_request($url);

  // Always return an array for safe foreach()ing
  $ret = array();
  if ($r->code == 200) {
    $ret = postcodeanywhere_parse_csv($r->data);
  }

  return $ret;
}

