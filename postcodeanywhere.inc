/**
 * Construct a URL for Postcode Anywhere, including the account and licence codes
 *
 * @param $action action method
 * @param $data other URL parameters
 * @return URL string
 */
function postcodeanywhere_pa_url($action, $data = array()) {
  $url = PCA_URL
    . "?account_code=" . variable_get('pca_account_code', '')
    . "&license_code=" . variable_get('pca_licence', '')
    . "&action=" . urlencode($action);

  foreach($data as $k => $v) {
    $url .= "&" . urlencode($k) . "=" . urlencode($v);
  }

  return $url;
}

/**
